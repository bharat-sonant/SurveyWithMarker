<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:weightSum="100">
    <TextView
        android:id="@+id/close_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:drawableLeft="@drawable/ic_confirmation_cross_box"
        android:textColor="#000"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:background="@drawable/border"
        android:gravity="top"
        android:orientation="vertical"
        android:padding="10dp"
        android:weightSum="100">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="top"
            android:layout_weight="100"
            android:gravity="top">

            <ImageView
                android:id="@+id/marker_iv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="top"
                android:src="@drawable/ic_image_not_found1"
                android:visibility="visible" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="100">

            <Button
                android:id="@+id/ocrScanCardBtns"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="50"
                android:background="@drawable/bordergreen"
                android:text="Scan Card"
                android:textSize="10dp" />
            <EditText
                android:id="@+id/cardscans"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="50"
                android:background="@drawable/readerborder"
                android:cursorVisible="false"
                android:digits="0123456789;?abcdefABCDEF"
                android:focusedByDefault="true"
                android:gravity="center"
                android:inputType="text"
                android:singleLine="true"
                android:textColor="#000"
                android:textSize="12dp"
                android:visibility="gone" />
            <View
                android:layout_width="10dp"
                android:layout_height="match_parent" />

            <Button
                android:id="@+id/revisit_btn"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_weight="50"
                android:background="@drawable/bordergreen"
                android:text="Revisit"
                android:textAllCaps="false" />

        </LinearLayout>
        <TextView
            android:id="@+id/noteText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#f00"
            android:textSize="15dp"
            android:layout_marginTop="10dp"/>

    </LinearLayout>
</LinearLayout>